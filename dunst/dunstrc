#########
# dunst #
#########

[global]
    monitor = 0
    follow = mouse
    geometry = "300x100-7-7"
    indicate_hidden = yes
    shrink = no
    notification_height = 0
    separator_height = 1
    padding = 30
    horizontal_padding = 30
    frame_color = "#888888"
    separator_color = frame
    sort = yes
    idle_threshold = 120

    # text

    font = JetBrainsMono Nerd Font 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    verbosity = mesg
    corner_radius = 7
    ignore_dbusclose = false
    force_xinerama = false
    mouse_right_click = close_current
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    
    # icons

    icon_position = left

    min_icon_size = 0
    max_icon_size = 32

[urgency_low]
    background = "#141414"
    foreground = "#888888"
    timeout = 5

[urgency_normal]
    background = "#141414"
    foreground = "#e8e8d3"
    timeout = 10

[urgency_critical]
    background = "#cf6a4c"
    foreground = "#141414"
    timeout = 20
